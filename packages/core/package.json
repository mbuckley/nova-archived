{
  "name": "@clio/nova-core",
  "version": "0.4.3",
  "description": "The core component package of the Clio Design System.",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/core/core.js",
  "files": [
    "dist/",
    "loader/",
    "src/css/"
  ],
  "scripts": {
    "build": "stencil build --docs --docs-json dist/docs/core.json",
    "start": "stencil build --dev --watch --serve",
    "start:qa": "stencil build --dev --watch --serve --es5",
    "test": "stencil test --spec --e2e  --coverage --passWithNoTests",
    "test:watch": "stencil test --spec --e2e --watchAll  --coverage --passWithNoTests",
    "test:e2e": "stencil test --e2e",
    "test:e2e:watch": "stencil test --e2e --watchAll",
    "test:spec": "stencil test --spec  --coverage",
    "test:spec:watch": "stencil test --spec --watchAll  --coverage",
    "test:scripts": "jest ./scripts",
    "format": "prettier --write '{scripts,src}/**/*.{js,ts,tsx}'",
    "format:check": "prettier --check '{scripts,src}/**/*.{js,ts,tsx}'",
    "lint:css": "stylelint",
    "lint:css:components": "stylelint src/components/**/*.scss",
    "lint:css:test": "stylelint src/css/tests/*.scss",
    "lint:ts:components": "eslint 'src/components/**/*.{ts,tsx}'",
    "publish": "npx clio-npm-publish packages/core"
  },
  "devDependencies": {
    "@clio/npm-package-manager": "0.1.4",
    "@stencil/core": "1.9.0-15",
    "@stencil/eslint-plugin": "0.2.1",
    "@stencil/react-output-target": "0.0.3",
    "@stencil/sass": "1.1.1",
    "@types/jest": "24.0.23",
    "@types/puppeteer": "1.20.2",
    "@typescript-eslint/eslint-plugin": "2.6.0",
    "@typescript-eslint/parser": "2.6.0",
    "acorn": "7.1.0",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.5.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.16.0",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "prettier": "1.18.2",
    "puppeteer": "1.20.0",
    "stylelint": "10.1.0",
    "stylelint-config-recommended": "2.2.0",
    "stylelint-scss": "3.9.3",
    "stylelint-selector-bem-pattern": "2.1.0"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://clio.jfrog.io/clio/api/npm/product-npm-dev-local/"
  }
}
