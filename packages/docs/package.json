{
  "name": "@clio/nova-docs",
  "version": "0.4.3",
  "description": "The documentation package of the Clio Design System.",
  "private": true,
  "engines": {
    "node": "10.16.0",
    "npm": "6.2.0"
  },
  "scripts": {
    "prebuild": "ts-node -P scripts/tsconfig.json scripts/build-pages",
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test:e2e": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "format:check": "prettier --list-different 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@clio/nova-core": "^0.4.3",
    "@stencil/core": "1.8.2-0",
    "@stencil/router": "1.0.1",
    "fuse.js": "3.4.5"
  },
  "license": "MIT",
  "devDependencies": {
    "@stencil/sass": "1.1.1",
    "@types/fs-extra": "8.0.0",
    "@types/jest": "24.0.23",
    "@types/node": "12.6.8",
    "@types/puppeteer": "1.19.1",
    "fast-glob": "3.0.4",
    "front-matter": "3.0.2",
    "gh-pages": "2.0.1",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "listr": "0.14.3",
    "marked": "0.7.0",
    "path": "0.12.7",
    "prettier": "1.18.2",
    "prismjs": "1.16.0",
    "puppeteer": "1.20.0",
    "slugify": "1.3.4",
    "ts-node": "8.3.0"
  }
}
